{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}",
      "args": ["xsocket*", "-t", "..\\xest\\", "-d"],
      "cwd":"${workspaceFolder}",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "cwd":"${workspaceFolder}",
      "args": ["--runInBand", ""],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}